<emitter name = "smoke" num_particles="200"
    duration="-1.0" type = "continuous"
    random_birthrate = "false" 
    birthrate = "10">

    <spawn_property name="velocity" type="random" min="-2, 10, -2" max="6, 20, 6"/>
    <spawn_property name="color" type="constant" value="0.2,0.2,0.2,0.5"/>
    <spawn_property name="size" type="random" min="16" max="24"/>
    <spawn_property name="lifetime" type="constant" value="10"/>

    <affector type="scale" mode="over_life" start="1" end="5"/>
    <affector type="fade" mode="over_life" start="0.0" end="0.25" function_type = "parabolic"/>
    <affector type="velocity"/>
</emitter>